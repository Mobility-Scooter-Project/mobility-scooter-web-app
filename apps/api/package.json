{
  "name": "@mobility-scooter-web-app/backend",
  "type": "module",
  "private": "true",
  "scripts": {
    "dev": "export ENVIRONMENT=development && tsx watch src/index.ts .env",
    "start": "node dist/index.js",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --packages=external",
    "lint": "eslint --fix .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:seed": "tsx scripts/seed.ts",
    "generate-api-key": "tsx scripts/generate-api-key.ts",
    "test": "export ENVIRONMENT=test && start-server-and-test 3000 --expect 404 'jest --force-exit'"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.3",
    "@scalar/hono-api-reference": "^0.7.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "eslint": "^9.22.0",
    "hono": "^4.7.4",
    "hono-openapi": "^0.4.6",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.6.0",
    "minio": "^8.0.4",
    "node-vault-client": "^1.0.1",
    "nodemailer": "^6.10.0",
    "otpauth": "^9.3.6",
    "pg": "^8.13.3",
    "popular-english-words": "^1.0.2",
    "qrcode": "^1.5.4",
    "rabbitmq-client": "^5.0.2",
    "rate-limit-redis": "^4.2.0",
    "zod": "^3.24.2",
    "zod-openapi": "^4.2.3"
  },
  "devDependencies": {
    "@hono/eslint-config": "^1.0.2",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.17",
    "@types/node-vault-client": "^1.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/qrcode": "^1.5.5",
    "drizzle-kit": "^0.30.5",
    "esbuild": "^0.25.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "start-server-and-test": "^2.0.10",
    "ts-jest": "^29.2.6",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2"
  }
}
