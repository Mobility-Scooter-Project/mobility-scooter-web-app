{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@middleware/*": ["src/middleware/*"],
      "@handlers/*": ["src/handlers/*"],
      "@db/*": ["src/db/*"],
      "@lib/*": ["src/lib/*"],
      "@integrations/*": ["src/integrations/*"],
      "@repositories/*": ["src/repositories/*"],
      "@validators/*": ["src/validators/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
