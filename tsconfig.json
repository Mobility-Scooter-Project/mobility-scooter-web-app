{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    //"verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "**/*.test.ts", "**/*.spec.ts"]
}